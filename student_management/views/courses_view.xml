<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_course_tree_1" model="ir.ui.view">
        <field name="name">student.management.courses.tree</field>
        <field name="model">student.management.courses</field>
        <field name="arch" type="xml">
            <tree string="Courses">
                <field name="name"/>
                <field name="code"/>
                <field name="credit"/>
            </tree>
        </field>
    </record>
    <record id="action_course_form" model="ir.ui.view">
        <field name="name">student.management.courses.form</field>
        <field name="model">student.management.courses</field>
        <field name="arch" type="xml">

            <form string="Courses">
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="credit"/>
                </group>
            </form>

        </field>
    </record>

    <record id="action_course_tree" model="ir.actions.act_window">
        <field name="name">student.management.courses.tree</field>
        <field name="res_model">student.management.courses</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new course
            </p>
        </field>
    </record>

</odoo>