<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="action_student_tree_1" model="ir.ui.view">
        <field name="name">student.management.students.tree</field>
        <field name="model">student.management.students</field>
        <field name="arch" type="xml">
            <tree string="Students">
                <field name="name"/>
                <field name="email"/>
                <field name="roll_no"/>
                <field name="department"/>
                <!-- <field name="course_ids" widget="many2many_tags"/> -->
                <button name="action_show_enrolled_courses" string="Show Enrolled Courses" type="object" class="btn-primary"/>
            </tree>
        </field>
    </record>
    <record id="action_course_form" model="ir.ui.view">
        <field name="name">student.management.students.form</field>
        <field name="model">student.management.students</field>
        <field name="arch" type="xml">

            <form string="Students">
                <group>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="roll_no"/>
                    <field name="department"/>
                    <field name="course_ids" widget="many2many_tags"/>
                </group>

            </form>

        </field>
    </record>


    <record id="action_student_tree" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student.management.students</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new student
            </p>
        </field>
    </record>

</odoo>